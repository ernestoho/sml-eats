{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["build/**", ".next/**"]
    },
    "server#build": {
      "dependsOn": ["$DATABASE_URL", "$PORT"],
      "outputs": ["build/**"]
    },
    "client#build": {
      "dependsOn": ["$NEXT_PUBLIC_GOOGLE_ANALYTICS"],
      "outputs": [".next/**"]
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "cache": false
    }
  }
}
